{
	"name": "markdowninteractive",
	"displayName": "Markdown-Interactive",
	"description": "",
	"publisher": "Timo",
	"version": "0.0.1",
	"repository": {
		"url": "https://github.com/tisch019/Markdown-Interactive.git"
	  },
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown.addElement",
				"title": "Add interactive Element",
				"category": "markdown",
				"icon": "resources/magier_white.svg"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == markdown",
					"command": "markdown.addElement",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "markdown.extension.printToHtml",
					"group": "navigation"
				}
			]
		},
		"markdown.previewStyles": [
			"./resources/css/interactiveElements.css"
		],
		"markdown.previewScripts": [
			"./resources/js/interactiveElements.js"
		],
		"markdown.markdownItPlugins": true
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/markdown-it": "^10.0.2",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"markdown-it": "^11.0.1",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
